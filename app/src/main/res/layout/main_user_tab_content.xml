<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="8dp">


    <!-- A CardView that contains a TextView -->
    <android.support.v7.widget.CardView
        xmlns:card_view="http://schemas.android.com/apk/res-auto"
        android:id="@+id/card_view"
        android:layout_gravity="center"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        card_view:cardCornerRadius="2dp">
        <LinearLayout
            android:orientation="vertical"
            android:layout_height="wrap_content"
            android:layout_width="match_parent"
            android:paddingEnd="16dp"
            android:paddingTop="24dp">
            <!--Title-->
            <TextView
                android:id="@+id/user_card_title"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:paddingStart="16dp"
                android:text="Title"
                style="?android:attr/textAppearanceLarge"/>
            <!--Subtitle - author, location of origin, etc -->
            <TextView
                android:id="@+id/user_card_origin"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:paddingStart="16dp"
                android:paddingBottom="16dp"
                android:text="@string/default_card_subtitle"
                style="?android:attr/subtitle" />
            <!-- list of tags -->
            <LinearLayout
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <TextView
                    android:id="@+id/user_card_tag"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:padding="4dp"
                    android:layout_marginEnd="8dp"
                    android:layout_marginTop="8dp"
                    android:layout_marginBottom="8dp"
                    android:textAllCaps="true"
                    android:text="Science"
                    android:background="@color/background_material_light"
                    style="?android:attr/textAppearanceButton" />
                <TextView
                    android:id="@+id/user_card_tag2"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:padding="4dp"
                    android:layout_marginEnd="8dp"
                    android:layout_marginTop="8dp"
                    android:layout_marginBottom="8dp"
                    android:textAllCaps="true"
                    android:text="Technology"
                    android:background="@color/background_material_light"
                    style="?android:attr/textAppearanceButton" />
            </LinearLayout>
            <!-- Content -->
            <TextView
                android:id='@+id/user_card_content'
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:paddingTop="16dp"
                android:paddingBottom="0dp"
                android:paddingStart="16dp"
                android:paddingEnd="16dp"
                android:text="@string/filler_text"
                android:textSize="14sp"/>
            <!-- overflow -->
            <ImageButton
                android:id="@+id/user_card_share"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="end"
                android:layout_marginBottom="8dp"
                android:layout_marginStart="8dp"
                android:layout_marginEnd="8dp"
                android:tint="@color/abc_background_cache_hint_selector_material_dark"
                android:background="#00000000"
                android:src="@drawable/abc_ic_menu_moreoverflow_mtrl_alpha"/>

        </LinearLayout>
    </android.support.v7.widget.CardView>
</RelativeLayout>