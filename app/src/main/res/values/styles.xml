<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="AppTheme.Base">
        <!-- Customize your theme here. -->
    </style>

    <!-- The overall theme of the app is light, but with the current color scheme we
         need white text in the app bar, so we will change that on a per layout basis -->
    <style name="AppTheme.Base" parent="Theme.AppCompat.Light.NoActionBar">
        <item name="colorPrimary">@color/primaryColor</item>
        <item name="colorPrimaryDark">@color/primaryColorDark</item>
        <item name="colorAccent">@color/accentColor</item>
        <!--<item name="android:actionOverflowButtonStyle">@style/OverflowAsHamburger</item>-->
        <item name="android:windowTranslucentStatus">true</item>
    </style>

    <!-- Style to replace actionbar overflow icon. set item 'android:actionOverflowButtonStyle' in AppTheme
    <style name="OverflowAsHamburger" parent="Widget.AppCompat.ActionButton.Overflow">
        <item name="android:layout_gravity">end</item>
        <item name="android:src">@mipmap/ic_menu_white_24dp</item>
    </style>-->

</resources>
