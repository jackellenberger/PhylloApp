<android.support.v4.widget.DrawerLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/drawer_layout"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:label="@string/app_name">


    <!-- MAIN CONTENT -->
    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context="edu.uchicago.cs234.spr15.quokka.phyllo.MainActivity"
        android:theme="@style/ThemeOverlay.AppCompat.Dark.ActionBar">

        <!-- APP BAR -->
        <include
            android:id="@+id/app_bar"
            layout="@layout/app_bar"
            android:label="@string/app_name" />

        <!-- TAB BAR -->
        <edu.uchicago.cs234.spr15.quokka.phyllo.SlidingTabLayout
            android:id="@+id/tab_bar"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:elevation="2dp"
            android:background="@color/primaryColor"/>

        <!-- TABS -->
        <android.support.v4.view.ViewPager
            android:id="@+id/tab_view_pager"
            android:layout_height="match_parent"
            android:layout_width="match_parent"
            android:layout_weight="1">
        </android.support.v4.view.ViewPager>
    </LinearLayout>

    <!-- LEFT DRAWER -->
    <RelativeLayout
        android:orientation="vertical"
        android:id="@+id/left_drawer"
        android:background="@color/background_material_light"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_gravity="start"
        android:choiceMode="singleChoice" >

        <ImageView
            android:id="@+id/left_drawer_image"
            android:layout_width="fill_parent"
            android:layout_height="@dimen/drawer_image_height"
            android:src="@drawable/lollipop5small"
            android:scaleType="fitXY"/>
        <TextView
            android:layout_alignBottom="@id/left_drawer_image"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:paddingStart="8dp"
            android:gravity="bottom"
            android:text="@string/Default_Username"
            android:textSize="36sp"
            android:textStyle="bold"
            android:textColor="@color/TextIcon"/>

    </RelativeLayout>

    <!-- RIGHT DRAWER -->
    <RelativeLayout
        android:orientation="vertical"
        android:elevation="4dp"
        android:layout_marginTop="@dimen/content_vertical_offset"
        android:id="@+id/right_drawer"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_gravity="end"
        android:choiceMode="singleChoice" >
        <ImageView
            android:id="@+id/right_drawer_image"
            android:layout_width="fill_parent"
            android:layout_height="@dimen/drawer_image_height"
            android:src="@drawable/lollipop1small"
            android:scaleType="fitXY"/>
        <TextView
            android:layout_alignBottom="@id/right_drawer_image"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:paddingLeft="8dp"
            android:gravity="bottom"
            android:text="@string/Default_locationname"
            android:textSize="36sp"
            android:textStyle="bold"
            android:textColor="@color/TextIcon"/>
        <TextView
            android:layout_below="@id/right_drawer_image"
            android:layout_width="fill_parent"
            android:layout_height="match_parent"
            android:background="@color/background_floating_material_dark"/>
    </RelativeLayout>

</android.support.v4.widget.DrawerLayout>
